@model IEnumerable<AsesoriasUABC.Models.carreras>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SubMenueOptions{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-done d-sm-inline-block">
            <a href="@Url.Action("Create","carreras")" class="nav-link"><i class="fas fa-plus-circle"></i> Agregar Carrera </a>
        </li>
    </ul>
}
@Styles.Render("~/Content/css/tables")
@Scripts.Render("~/bundles/tables")


<h2>Carreras</h2>

<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-striped" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.codigo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.codigo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","carreras", new { id = item.id_carrera })" class="btn btn-link"><i class="fas fa-edit"></i> </a>
                            <a href="@Url.Action("Details","carreras", new { id = item.id_carrera })" class="btn btn-link"><i class="fas fa-clipboard"></i> </a>
                            <a href="@Url.Action("Delete","carreras", new { id = item.id_carrera })" class="btn btn-link"><i class="fas fa-trash"></i> </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

