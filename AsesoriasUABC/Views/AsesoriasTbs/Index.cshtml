@model IEnumerable<AsesoriasUABC.Models.AsesoriasTb>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section SubMenueOptions{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-done d-sm-inline-block">
            <a href="@Url.Action("Create","AsesoriasTbs")" class="nav-link"><i class="fas fa-plus-circle"></i> Agregar Asesoria </a>
        </li>
    </ul>
}
@Styles.Render("~/Content/css/tables")
@Scripts.Render("~/bundles/tables")
<h2>Asesorias</h2>
<div class="card">
    <div class="card-body">

        <table class="table table-bordered table-striped" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.matricula)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.id_materia)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.id_asesor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cvc)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.matricula)
                        </td>
                        <td>
                             @item.MateriasTb.nombre
                        </td>
                        <td>
                            @item.AsesoresTb.nombre  @item.AsesoresTb.ApellidoP @item.AsesoresTb.ApellidoM
                            
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cvc)
                        </td>
                        <td>

                            <a href="@Url.Action("Edit","AsesoriasTbs", new { id = item.Id_asesoria })" class="btn btn-link"><i class="fas fa-edit"></i> </a>
                            <a href="@Url.Action("Details","AsesoriasTbs", new { id = item.Id_asesoria })" class="btn btn-link"><i class="fas fa-clipboard"></i> </a>
                            <a href="@Url.Action("Delete","AsesoriasTbs", new { id = item.Id_asesoria })" class="btn btn-link"><i class="fas fa-trash"></i> </a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
