@model IEnumerable<AsesoriasUABC.Models.Usuarios>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section SubMenueOptions{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item">
            <a class="nav-link"  href="#"><i class="fas fa-user"></i> Agregar ususario</a>
        </li>
    </ul>
}
<div class="card">
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-bordered table-striped" id="Table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.id_AspUser)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApellidoP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApellidoM)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.codigo_empleado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.sexo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        @Html.HiddenFor(modelItem => item.id_user)
                        @Html.HiddenFor(modelIte => item.id_AspUser)
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.codigo_empleado)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.id_user }) |
                            @Html.ActionLink("Details", "Details", new { id = item.id_user }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.id_user })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@Scripts.Render("~/bundles/tables")
<script type="text/javascript">
    $(document).ready(function () {
        $("#Table").DataTable();
    })

</script>