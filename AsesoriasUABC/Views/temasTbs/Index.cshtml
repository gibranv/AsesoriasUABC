@model IEnumerable<AsesoriasUABC.Models.temasTb>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section SubMenueOptions{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-done d-sm-inline-block">
            <a href="@Url.Action("Create","temasTbs")" class="nav-link"><i class="fas fa-plus-circle"></i> Agregar tema </a>
        </li>
    </ul>
}
@Styles.Render("~/Content/css/tables")
@Scripts.Render("~/bundles/tables")

<h2>Temas</h2>
<div class="card">
    <div class="card-body">
        
        <table class="table table-bordered table-striped" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.numero_tema)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre_tema)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.numero_tema)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre_tema)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","temasTbs", new { id = item.id_Temas })" class="btn btn-link"><i class="fas fa-edit"></i> </a>
                            <a href="@Url.Action("Details","temasTbs", new { id = item.id_Temas })" class="btn btn-link"><i class="fas fa-clipboard"></i> </a>
                            <a href="@Url.Action("Delete","temasTbs", new { id = item.id_Temas })" class="btn btn-link"><i class="fas fa-trash"></i> </a>
                    
                        </td>
                    </tr>
                }
            </tbody>
</table>
    </div>
</div>
