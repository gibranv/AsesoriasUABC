@model IEnumerable<AsesoriasUABC.Models.AsesoresTb>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css/tables")

@section SubMenueOptions{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
        </li>

    </ul>
}
@Scripts.Render("~/bundles/tables")


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-striped" id="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApellidoP)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.codigo_empleado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.correo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.sexo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ApellidoM)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoP)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.codigo_empleado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.correo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ApellidoM)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id_Asesores }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id_Asesores }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id_Asesores })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

