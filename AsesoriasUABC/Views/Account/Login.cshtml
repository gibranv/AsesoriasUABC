@using AsesoriasUABC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/Default.cshtml";
}
<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>Asesorias</b>FIAD</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        
            <div class="card-body login-card-body">
                <p class="login-box-msg"></p>

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(m => m.Email, "", new { placeholder = "Correo Electronico", @class = "form-control" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger col-12" })
                    </div>
                    <div class="input-group mb-3">
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Contraseña", @class = "form-control" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger col-12" })
                    </div>
                    <div class="row">

                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block btn-success">Entrar</button>
                        </div>
                        <!-- /.col -->
                    </div>

                <p class="mb-1">
                    <a href="#">Olvide mi contraseña</a>
                </p>
                <div >
                    <button onclick="location.href = '../AsesoriasTbs/Create'" url="~/AsesoriasTbs/Create"  class="btn btn-block btn-success btn-lg">Registrar Asesoria</button>
                </div>
}
            </div>
        
        <!-- /.login-card-body -->
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}